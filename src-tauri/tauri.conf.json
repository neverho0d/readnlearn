{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Read-n-Learn",
    "version": "0.1.0",
    "identifier": "com.psv.readnlearn",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../app/dist"
    },
    "app": {
        "windows": [
            {
                "title": "Read-n-Learn",
                "width": 800,
                "height": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "deb",
            "rpm"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "linux": {
            "deb": {
                "depends": [
                    "libwebkit2gtk-4.1-0",
                    "libgtk-3-0",
                    "libglib2.0-0",
                    "libayatana-appindicator3-1",
                    "librsvg2-2"
                ]
            },
            "rpm": {
                "depends": [
                    "webkit2gtk4.1",
                    "gtk3",
                    "glib2",
                    "libappindicator-gtk3",
                    "librsvg2"
                ]
            }
        }
    }
}